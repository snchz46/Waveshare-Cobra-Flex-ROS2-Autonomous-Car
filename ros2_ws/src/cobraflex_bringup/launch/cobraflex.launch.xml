    <!-- Launch ZED camera -->
    <include file="$(find-pkg-share zed_wrapper)/launch/zed2.launch.py">
        <!-- Optional params -->
        <!-- <arg name="camera_name" value="zed2" /> -->
        <!-- <arg name="publish_tf" value="true" /> -->
        <!-- <arg name="resolution" value="HD720" /> -->
        <!-- <arg name="frame_rate" value="30" /> -->
    </include>

    <!-- Lidar avoidance node -->
    <node 
        pkg="cobraflex"
        exec="cobraflex_lidar_avoidance"
        name="lidar_avoidance_node"
        output="screen">
