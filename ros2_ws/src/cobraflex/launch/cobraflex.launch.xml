<launch>

    <arg name="mode" default="manual"/>

    <group if="$(var mode) == 'manual'">
        <include file="$(find-pkg-share cobraflex)/launch/cobraflex_manual.launch.xml"/>
    </group>

    <group if="$(var mode) == 'auto'">
        <include file="$(find-pkg-share cobraflex)/launch/cobraflex_automatic.launch.xml"/>
    </group>

</launch>