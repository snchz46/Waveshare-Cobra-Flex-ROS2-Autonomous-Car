<launch>

    <!-- ========================= -->
    <!-- ARGS                      -->
    <!-- ========================= -->
    <arg name="serial_port" default="/dev/ttyACM1"/>
    <arg name="baudrate" default="115200"/>
    <arg name="max_linear" default="0.53"/>
    <arg name="max_angular" default="6.0"/>
    <arg name="turn_threshold" default="0.3"/>
 

    <!-- ========================= -->
    <!-- CobraFlex JSON Driver     -->
    <!-- ========================= -->
    <node
        pkg="cobraflex"
        exec="cobraflex_ros_driver"
        name="cobraflex_driver"
        output="screen">

        <param name="port" value="$(var serial_port)"/>
        <param name="baud" value="$(var baudrate)"/>

        <param name="max_linear" value="$(var max_linear)"/>
        <param name="max_angular" value="$(var max_angular)"/>
        <param name="turn_threshold" value="$(var turn_threshold)"/>
    </node>


</launch>
