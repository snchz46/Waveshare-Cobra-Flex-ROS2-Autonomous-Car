<launch>

    <!-- Launch arguments -->
    <arg name="use_rviz" default="true"/>



    <!-- Load robot model -->
    <include file="$(find-pkg-share cobraflex)/launch/cobraflex_description.launch.xml">
        <arg name="use_rviz" value="$(var use_rviz)"/>
    </include>

    <!-- Load ZED Mini model -->
    <include file="$(find-pkg-share cobraflex)/launch/cobraflex_zed_description.launch.py" />

    <!-- ZED Camera (ZED Mini)-->
    <include file="$(find-pkg-share zed_wrapper)/launch/zed_camera.launch.py">
        <arg name="camera_model" value="zedm"/>
    </include>

    <!-- Load driver -->
    <include file="$(find-pkg-share cobraflex)/launch/cobraflex_driver.launch.xml" />

</launch>

